@using Core.Parameters
@using WebMVC.Controllers

@model PlayerContainsAllianceHistoryParameters

@using (Html.BeginForm(nameof(PlayersController.AllianceHistory), "Players", FormMethod.Post))
{

    <div class="form-group">
        <label for="Date">@Html.DisplayNameFor(m => m.Date)</label>
        @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="MinChangeAlliance">@Html.DisplayNameFor(m => m.MinChangeAlliance)</label>
        @Html.TextBoxFor(m => m.MinChangeAlliance, new { @type = "number", @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="MaxChangeAlliance">@Html.DisplayNameFor(m => m.MaxChangeAlliance)</label>
        @Html.TextBoxFor(m => m.MaxChangeAlliance, new { @type = "number", @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="AllianceInput">@Html.DisplayNameFor(m => m.Alliances)</label>
        <small id="AllianceInputHelp" class="form-text text-muted">Id of alliances, separated with ","</small>
        <input id="AllianceInput" class="form-control" type="text" value="@string.Join(',', Model.Alliances)" />
    </div>
    <div class="form-group">
        <label for="PlayerInput">@Html.DisplayNameFor(m => m.Players)</label>
        <small id="PlayerInputHelp" class="form-text text-muted">Id of alliances, separated with ","</small>
        <input id="PlayerInput" class="form-control" type="text" value="@string.Join(',', Model.Players)" />
    </div>
    <div>
        @Html.HiddenFor(m => m.Alliances)
        @Html.HiddenFor(m => m.Players)
        @Html.HiddenFor(m => m.PageNumber)
        @Html.HiddenFor(m => m.PageSize)
        @Html.HiddenFor(m => m.SortField)
        @Html.HiddenFor(m => m.SortOrder)
    </div>
    <input type="submit" id="Check" class="btn btn-primary mt-2" value="Check" />
}
