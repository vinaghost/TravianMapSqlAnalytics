@using Core.Features.GetVillageContainsDistance

@model VillageContainsDistanceParameters

@using (Html.BeginForm(nameof(VillagesController.Index), "Villages", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.EditorFor(m => m.MinPopulation)
    @Html.EditorFor(m => m.MaxPopulation)

    @Html.EditorFor(m => m.TargetX)
    @Html.EditorFor(m => m.TargetY)

    @Html.EditorFor(m => m.MinDistance)
    @Html.EditorFor(m => m.MaxDistance)

    <div class="form-group">
        @Html.LabelFor(m => m.Tribe, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.Tribe, Constants.Tribes, new { @class = "form-control" })
    </div>
    
    @Html.EditorFor(m => m.IgnoreCapital)
    @Html.EditorFor(m => m.IgnoreNormalVillage)

    @Html.EditorFor(m => m.Alliances, "ListInt")
    @Html.EditorFor(m => m.Players, "ListInt")

    <div>
        @Html.HiddenFor(m => m.PageNumber)
        @Html.HiddenFor(m => m.PageSize)
        @Html.HiddenFor(m => m.SortField)
        @Html.HiddenFor(m => m.SortOrder)
    </div>
    <input type="submit" id="Check" class="btn btn-primary mt-2" value="Check" />
}
