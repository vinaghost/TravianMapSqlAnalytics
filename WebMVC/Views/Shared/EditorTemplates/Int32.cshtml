@model int?

@{
    var htmlAttributes = new Dictionary<string, object>();
    htmlAttributes.Add("type", "number");
    htmlAttributes.Add("class", "form-control");

    if (ViewData.ContainsKey("id"))
    {
        ViewData.TemplateInfo.HtmlFieldPrefix = ViewBag.id;
    }


}
<div class="input-group mt-3">
    <span class="input-group-text">@Html.LabelForModel(new { @class = "control-label" })</span>    
    @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, htmlAttributes)
    @Html.ValidationMessageFor(m => m, "", new { @class = "form-text text-danger" })
</div>